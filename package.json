{
  "name": "genhook-cli",
  "version": "0.0.1",
  "description": "A simple-to-use tool to generate git hooks that wire up to gulp tasks",
  "repository": "bradleygore/genhook",
  "preferGlobal": true,
  "main": "index.js",
  "files": [
    "index.js",
    "bin",
    "genhook",
    "templates",
    "util"
  ],
  "engines": {
    "node": ">= 4.0"
  },
  "bin": {
    "genhook": "bin/genHook.js"
  },
  "scripts": {
    "pretest": "jscs *.js bin/*.js util/*.js genhook/**/*.js && gulp lint",
    "test": ""
  },
  "keywords": [
    "git",
    "hooks",
    "git-hooks",
    "pre-commit"
  ],
  "author": "Bradley Gore <bradley@bradleygore.com> (www.blog.bradleygore.com)",
  "license": "MIT",
  "dependencies": {
    "chalk": "^1.1.1",
    "yargs": "^3.30.0"
  },
  "devDependencies": {
    "gulp": "^3.9.0",
    "gulp-eslint": "^1.1.1",
    "jscs": "^2.8.0"
  },
  "jscsConfig": {
    "preset": "google",
    "validateIndentation": 4,
    "disallowMultipleVarDecl": null,
    "maximumLineLength": {
      "value": 120,
      "allowComments": true
    }
  }
}
